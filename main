template <typename T>
T morreu(T jogador)
{
	if (jogador.vida > 0)
	{
		return true; // vivo
	}
	else
	{
		return false; // morto
	}
}


template <typename T>
T morreu(T inimigo)
{
	if (inimigo.vida > 0)
	{
		return true; // vivo
	}
	else
	{
		return false; // morto
	}
}



