#include <iostream>
#include <string>

using namespace std;


struct arma {
	string nome;
	int danoMax;
	int danoMin;
};

struct jogador {
	int nivel;
	int vida = 600;
	arma arma;
};
struct inimigo {
	string nome;
	int vida = 100;
	arma arma;
};

struct fase {
	string nome;
	inimigo inimigos[5];
};



